form(method="POST" action="#")
  h1 {{'Accounts.edit_user' | translate}}
  p
    label First Name
    input(type="text" name="firstname" placeholder="firstname" value="{{account.data.name.first}}")
  p
    label Last Name
    input(type="text" name="lastname" placeholder="lastname" value="{{account.data.name.last}}")
  p
    label Email
    input(type="text" name="email" placeholder="email" ng-model="account.data.username" value="{{account.data.username}}" required)
    span(ng-show="account.data.username.$error.required") Email is required!
  p
    label Carrier Domain
    select(name="carrier")
      option(value="")
      option(value="maaii.com") Maaii
  p
    label User group
  p
    ul
      li
        input(type="checkbox" name="groups" value="admin")
        label Admin
      li
        input(type="checkbox" name="groups" value="developer")
        label Developer
      li
        input(type="checkbox" name="groups" value="marketing")
        label Marketing
      li
        input(type="checkbox" name="groups" value="engineer")
        label Engineer
      li
        input(type="checkbox" name="groups" value="cs")
        label CS
  p
    input(type="submit" value="Create account")
  p
    a(ng-click="closeSlider()") Close
