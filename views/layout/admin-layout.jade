doctype html
html(lang="#{lang||'en'}" ng-app="App" data-framework="typescript")
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    block scripts
      script(src='/vendor/jquery/dist/jquery.min.js')
      script(src='/vendor/i18next/i18next.min.js')
      script(src='/vendor/angular/angular.min.js')
      script(src='/vendor/angular-translate/angular-translate.js')
      script(src='/vendor/angular-translate-loader-static-files/angular-translate-loader-static-files.min.js')
      script(src='/vendor/angular-ui-router/release/angular-ui-router.min.js')
      script(src='/vendor/angular-animate/angular-animate.min.js')
      script(src='/vendor/angular-resource/angular-resource.min.js')
      script(src='/javascript/application.js')
      script(src='/javascript/bundle.js')
  body()
    nav(id="main-nav")
      ul
        li
          a(ui-sref="dashboard.index") {{'dashboard' | translate}}
        li
          a(ui-sref="company") {{'company' | translate}}
        li
          a(ui-sref="accounts.index") {{'account' | translate}}
        li(style="display: none;")
          a(ui-sref="users") {{'end_user' | translate}}
        li
          a(ui-sref="permissions") {{'permissions' | translate}}
        li(style="display: none;")
          a(ui-sref="voucher") {{'voucher' | translate}}
        li
          a(ui-sref="setting") {{'setting' | translate}}
    div(id="main-view" ui-view)
      header(id="main-header")
        h1 TITLE
        a Companies switcher
        p Welcome. Username
        a Logout
    block content
